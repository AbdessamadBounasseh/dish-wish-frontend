<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Profil.search_profile">

    <ImageButton
        android:id="@+id/btnBack"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/ic_back"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="22dp"
        android:layout_marginStart="16dp"
        android:background="@color/white"/>
    <View
        android:id="@+id/profile"
        android:layout_width="332dp"
        android:layout_height="628dp"
        android:background="@drawable/border_background"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="75dp"/>
    <!-- Second View: portrait_of -->
    <ImageView
        android:id="@+id/portrait_of"
        android:layout_width="92dp"
        android:layout_height="92dp"
        android:layout_marginEnd="120dp"
        android:background="@drawable/portrait_of"
        android:elevation="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.8"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/profile_infos"
        tools:layout_editor_absoluteY="83dp" />
    <RelativeLayout
        android:id="@+id/profile_infos"
        android:layout_width="304dp"
        android:layout_height="590dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="64dp"
        app:layout_constraintStart_toStartOf="@id/profile"
        app:layout_constraintTop_toTopOf="@id/profile">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="467dp"
            android:layout_marginTop="80dp"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textViewFirstName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="First name"
                        android:textColor="#868686"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/textViewActualFirstName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="#010F07"
                        android:textSize="18sp" />
                </LinearLayout>

                <!-- Last Name -->
                <LinearLayout
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textViewFirstName"
                    android:layout_marginTop="8dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textViewLastName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="LAST name"
                        android:textColor="#868686"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/textViewActualLastName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="#010F07"
                        android:textSize="18sp" />
                </LinearLayout>
            </LinearLayout>

            <!--  Address-->
            <TextView
                android:id="@+id/textViewAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="address"
                android:textColor="#868686"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textViewActualAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#010F07"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textViewPhoneNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="Phone number"
                android:textColor="#868686"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textViewActualPhoneNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#010F07"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <!-- Allergies -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textViewAllergies"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Allergies"
                        android:textColor="#868686"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/textViewActualAllergies"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text=""
                        android:textColor="#010F07"
                        android:textSize="18sp" />
                </LinearLayout>

                <!-- Diet -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="76dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textViewDiet"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Diet"
                        android:textColor="#868686"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/textViewActualDiet"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text=""
                        android:textColor="#010F07"
                        android:textSize="18sp" />
                </LinearLayout>
            </LinearLayout>


            <TextView
                android:id="@+id/textViewBio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="Bio"
                android:textColor="#868686"
                android:textSize="14sp"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/textViewActualBio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#010F07"
                android:textSize="18sp"
                android:visibility="invisible" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/editTextComment"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:hint="Add comment" />

                    <Button
                        android:id="@+id/btnAddComment"
                        android:layout_width="90dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="8dp"
                        android:backgroundTint="@color/principalColor"
                        android:text="Send" />
                </LinearLayout>

                <androidx.core.widget.NestedScrollView
                    android:id="@+id/nestedScrollView"
                    android:layout_width="292dp"
                    android:layout_height="122dp"
                    android:layout_below="@id/btnAddComment"
                    android:layout_marginTop="43dp"
                    tools:ignore="NotSibling">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerViewComments"
                        android:layout_width="match_parent"
                        android:layout_height="150dp" />
                </androidx.core.widget.NestedScrollView>
            </RelativeLayout>


        </LinearLayout>

        <RatingBar
            android:id="@+id/ratingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:stepSize="1"
            android:scaleX="0.5"
            android:scaleY="0.5"
            android:numStars="5"
            android:layout_marginStart="28dp"/>

        <Button
            android:id="@+id/btnAddReview"
            android:layout_width="120dp"
            android:layout_height="38dp"
            android:layout_marginTop="40dp"
            android:layout_marginStart="87dp"
            android:backgroundTint="@color/principalColor"
            android:text="Add review"
            android:textSize="11sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ratingBar" />


    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>